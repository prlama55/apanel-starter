        categories: {
          connect: [
            { id: 'category-1-fr-draft', position: { before: 'category-2-en-draft' } },
            { id: 'category-2-en-draft', position: { after: 'category-1-fr-draft' } },
          ],
        },
      });
    });
  });

  describe('I18n (categories) -> Non I18n (products)', () => {
